<?xml version="1.0"?>
<!-- @see https://pear.php.net/manual/en/package.php.php-codesniffer.annotated-ruleset.php -->
<ruleset name= "Laravel PHPCS Rules">
 
    <description>PHPCS ruleset for Example app.</description>
 
    <file>tests</file>
    <file>src</file>
 
    <!-- Show progress of the run -->
    <arg value= "p"/>
 
    <!-- Show sniff codes in all reports -->
    <arg value= "s"/>
 
    <!-- Our base rule: set to PSR12 -->
    <rule ref="PSR12">
        <exclude name="PSR12.Operators.OperatorSpacing.NoSpaceBefore"/>
        <exclude name="PSR12.Operators.OperatorSpacing.NoSpaceAfter"/>
    </rule>
 
    <rule ref="Generic.Files.LineLength">
        <properties>
            <!-- Soft warning limit -->
            <property name="lineLimit" value="120"/>
            <!-- Set to 0 to disable hard error limit (only warnings beyond lineLimit) -->
            <property name="absoluteLineLimit" value="0"/>
            <!-- Ignore long comment/doc lines (optional). Set to true if you don't want comment warnings -->
            <!-- <property name="ignoreComments" value="true"/> -->
        </properties>
    </rule>
    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>tests/</exclude-pattern>
    </rule>
 
</ruleset>